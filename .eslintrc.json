{
  "parser": "babel-eslint",
  "extends": ["airbnb", "plugin:jest/recommended"],
  "env": {
    "browser": true,
    "node": true,
    "jest/globals": true
  },
  "plugins": ["jest"],
  "rules": {
    "no-underscore-dangle": "off",
    "max-len": ["warn", {"code": 125, "comments": 140}],
    "import/no-extraneous-dependencies": ["error", {"devDependencies": ["**/jest.setup.js", "**/*.test.{js,jsx}", "**/webpack.*.js"]}]
  }
}
